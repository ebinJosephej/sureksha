<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_lg</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/gap_xl</item>
        <item name="android:paddingEnd">@dimen/gap_xl</item>
        <item name="android:paddingTop">@dimen/gap_sm</item>
        <item name="android:paddingBottom">@dimen/gap_sm</item>
    </style>

    <style name="PrimaryButton.Positive">
        <item name="android:textColor">@color/colorTextWhitePrimary</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="PrimaryButton.Black">
        <item name="android:textColor">@color/colorTextWhitePrimary</item>
        <item name="android:background">@drawable/button_bg_black</item>
    </style>

    <style name="EditTextField">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_lg</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/gap_xl</item>
        <item name="android:paddingEnd">@dimen/gap_xl</item>
        <item name="android:paddingTop">@dimen/gap_sm</item>
        <item name="android:paddingBottom">@dimen/gap_sm</item>
        <item name="background">@drawable/edit_text_bg</item>
    </style>

    <style name="textStyleDescription">
        <item name="android:textSize">@dimen/font_md</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextBlackSecondary</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
    </style>

    <style name="textStyleMediumBold">
        <item name="android:textSize">@dimen/font_md</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextBlackPrimary</item>
    </style>

    <style name="textStyleSubMedium">
        <item name="android:textSize">@dimen/font_md</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextBlackSecondary</item>
    </style>

    <style name="textStyleMedium">
        <item name="android:textSize">@dimen/font_md</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextBlackPrimary</item>
    </style>

    <style name="textStyleNormalBold">
        <item name="android:textSize">@dimen/font_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextBlackPrimary</item>
    </style>

    <style name="textStyleNormalWhiteBold">
        <item name="android:textSize">@dimen/font_lg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextWhitePrimary</item>
    </style>

    <style name="textStyleNormal">
        <item name="android:textColor">@color/colorTextBlackPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_lg</item>
    </style>

    <style name="textStyleNormalWhite">
        <item name="android:textColor">@color/colorTextWhitePrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_lg</item>
    </style>

    <style name="textStyleNormalWhiteMega">
        <item name="android:textColor">@color/colorTextWhitePrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_xxxl</item>
    </style>

    <style name="textStyleSmall">
        <item name="android:textColor">@color/colorTextBlackPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_sm</item>
